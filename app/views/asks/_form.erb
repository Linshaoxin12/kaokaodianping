<div id="ask">
<%= simple_form_for(@ask) do |f| %>
  <div class="inputs">
    <%= f.input :title, :label => "问题标题", :input_html => {:class => "long"}%>
    <%= f.input :body, :label => "补充说明（可选）", :as => :text, :input_html => {:class => "long"} %>
<input type="hidden" name="topic" value="<%=@topic.name unless @topic.blank?%>">

    <% content_for :butt2 do %>
        $("#ask_body").qeditor({'is_mobile_device': <%= is_mobile_device? ? 'true' : 'false' %>});
    <% end %>
  </div>
  <div class="actions">
    <button class="submit" style="width:100px" <%if @is_ie6 or @is_ie7%>onclick="document.getElementById('new_ask').submit()"<%end%>>发表提问</button> 或者 <%= link_to '返回', asks_path %>
  </div>
<% end %>
</div>
  <%= render "asks/sidebar" %>

