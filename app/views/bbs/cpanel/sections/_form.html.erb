<%= form_for(@section,:url=>(@section.new_record? ? bbs_cpanel_sections_path : bbs_cpanel_section_path(@section) )) do |f| %>
<fieldset>
  <legend></legend>
  <%= render 'shared/error_messages', :target => @section %>

  <div class="clearfix">
    <%= f.label :name %>
    <div class="input">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :sort %>
    <div class="input">
      <%= f.text_field :sort %>
    </div>
  </div>
  <div class="actions">
    <button class="btn primary">保存</button> <%= link_to 'Back', bbs_cpanel_sections_path %>
  </div>
  </fieldset>
<% end %>
