<% content_for :sitemap do %>
  <span class="current">分类</span>
<% end %>
<h1>Listing sections</h1>

<table class="grid">
  <tr class="head">
    <td class="first">Id</td>
    <td>Name</td>
    <td>Sort</td>
    <td></td>
  </tr>

<% @sections.each do |section| %>
  <tr>
    
    <td class="first"><%= section.id %></td>
    <td><%= section.name %></td>
    <td><%= section.sort %></td>
    <td><%= link_to 'Edit', edit_bbs_cpanel_section_path(section) %>
    <%= link_to 'Destroy', bbs_cpanel_section_path(section), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

