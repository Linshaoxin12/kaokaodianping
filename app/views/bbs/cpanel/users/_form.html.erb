<%= form_for(@user,:url=>(@user.new_record? ? bbs_cpanel_users_path : bbs_cpanel_user_path(@user) ), :html => { :enctype =>  "multipart/form-data" }) do |f| %>
   <%= render 'shared/error_messages', :target => @user %>
  <div class="clearfix">
    <%= f.label :login %>
    <div class="input">
    <%= f.text_field :login, :class => "span5" %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input">
    <%= f.text_field :email, :class => "span8" %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :name %>
    <div class="input">
    <%= f.text_field :name %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :location %>
    <div class="input">
    <%= f.text_field :location %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :tagline %>
    <div class="input">
    <%= f.text_field :tagline, :class => "span13" %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :bio %>
    <div class="input">
    <%= f.text_area :bio, :class => "span13", :style => "height:60px;" %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :website %>
    <div class="input">
    <%= f.text_field :website, :class => "xxlarge" %>
    </div>
  </div>
  <div class="clearfix">
    <label>头像</label>
    <div class="input">
    <%= user_avatar_tag(@user, :bbs_large) %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :verified %>
    <div class="input">
    <%= f.check_box :verified, :class => "checkbox" %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :state %>
    <div class="input">
    <%= f.select :state, User::STATE.collect { |s| [s[0],s[1]] } %>
    </div>
  </div>  
  <div class="actions">
    <button class="btn primary">保存</button> <%= link_to 'Back', bbs_cpanel_users_path %>
  </div>
<% end %>
