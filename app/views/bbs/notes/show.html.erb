<%= render "base" %>
<%= content_for :sitemap do %>
  <li class="active">查看</li>
<% end %>

<div id="notes" class="box">
  <div class="note">
    <% if @note.publish %>
    <div class="pull-right urls">
      <em>本页地址:</em> <input type="text" onclick="$(this).select();" value="<%= note_url(@note) %>" readonly="readonly" />
    </div>
    <% end %>
    <div class="info">
      <p><%= raw '<span class="label warning">公开</span> ' if @note.publish %>共 <%= @note.word_count %> 个字符, 创建于 <%= timeago(@note.created_at) %>, <%= @note.changes_count %> 次编辑, by <%= bbs_user_name_tag(@note.user) %></p>
    </div>

    <div class="body"><%= markdown @note.body %></div>
    
    <% if owner? @note %>
      <div class="buttons">
        <a href="<%= edit_bbs_note_path(@note) %>" class="btn">编辑</a>
        <%= link_to "删除", bbs_note_path(@note),:confirm => "确定要删除吗？", :method => :delete, :class => "btn danger"  %>
      </div>
    <% end %>
  </div>
</div>


