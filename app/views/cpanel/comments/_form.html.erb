<div id="cpanel_comment" class="form">
<%= simple_form_for(@comment, 
  :url => (@comment.new_record? ? cpanel_comments_path : cpanel_comment_path(@comment.id)) ) do |f| %>

  <div class="inputs">
    <%= f.input :body, :as => :text %>
  <%= f.input :user_id %>
  <%= f.input :commentable_type %>
  <%= f.input :commentable_id %>
  </div>
  <div class="actions">
    <button type="submit">提交</button>
     或者 <%= link_to '返回', cpanel_comments_path %>
  </div>
<% end %>
</div>
