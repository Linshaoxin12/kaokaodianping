<div id="cpanel_topic" class="form">
<%= simple_form_for(@topic, 
  :url => (@topic.new_record? ? cpanel_topics_path : cpanel_topic_path(@topic.id)), :html => { :enctype =>  "multipart/form-data" } ) do |f| %>

  <div class="inputs">
  <%= f.input :name,:label=>'机构名称' %>
  <%= f.input :website,:label=>'网址' %>
  <%= f.input :city,:label=>'城市' %>
  <%= f.input :addr,:label=>'学校地址' %>
  <%= f.input :summary,:label=>'简短介绍',:as => :text %>
  <%= f.input :cover,:label=>'LOGO' %>
  <% if not @topic.cover.blank? %>
  <div class="row">
    <label>预览</label>
    <%= image_tag(@topic.cover.normal.url) %>
  </div>
  <% end %>
  <%= f.input :tags_array,:label=>'标签(请以,分隔填写)' %>
  <%= f.input :will_autofollow,:as=>:boolean,:label=>'将被自动关注'%>
  </div>
  <div class="actions">
    <button type="submit">提交</button>
     或者 <%= link_to '返回', cpanel_topics_path %>
  </div>
<% end %>
</div>

