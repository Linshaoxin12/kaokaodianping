<div id="shouye_chang">
  <div class="user_profile">
    <%= render "head", :user => @user %>
  </div>
  <div class="asks">
    <% @asks.each do |item| %>
      <%= render "/asks/ask", :item => item %>
    <% end %>
  </div>
  <% if @asks.length == @per_page %>
    <div class="pagination"><a class="page_more" href="#" onclick="return loadAsks();">查看更多...</a></div>
  <% end %>
</div>
<%= render "sidebar", :user => @user %>

