    function sendFeed() {
	  var uiOpts = {
		  url : "feed",
		  display : "popup",
		  params : {
		    "url":"http://www.yourdomain.com/feed.html",
		    "name":"新鲜事测试，这里是标题",
		    "description":"现在我正在测试人人网新鲜事功能，不要理我",
		    "image":"http://at-img4.tdimg.com/board/2011/5/46465.jpg",
		    "action_name": "过来一起玩",
		    "action_link":"http://www.yourdomain.com/feed.html"
		  },
		  onSuccess: function(r){},
		  onFailure: function(r){} 
	  };
	  Renren.ui(uiOpts);
	}
  </script>
